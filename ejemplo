class Person:
    def __init__(self, name, age):
        self.name = name
        self.age = age
# la funcion init es para definir parametros
    def greet (self): 
        print (f"Hola, mi nombre es {self.name} y tengo {self.age} a√±os")

# esta ultima funcion si es utilizable asignandola con un . 

person1 = Person (name= input ("Cual es tu nombre? "), age= input ("Cual es tu edad? "))

person1.greet ()

class BankAccount: 
    def __init__(self, account_holder, balance):
        self.account_holder = account_holder
        self.balance = balance
        self.is_active= True

    def deposit (self, amount):
        if self.is_active:
            self.balance += amount
            print(f"se ha depositado {amount}. Saldo actual {self.balance}")
        else:
            print ("No se puede depositar, cuenta inactiva")
